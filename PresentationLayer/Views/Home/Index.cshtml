@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center main-content">
    <h1 class="display-4">Welcome</h1>
    <p class="lead">Learn about <a href="https://docs.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.</p>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #C2FFC7; /* Light green background */
        color: #333; /* Text color */
    }

    .main-content {
        background-color: #ffffff; /* White background for the content */
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    h1.display-4 {
        color: #526E48; /* Dark green color for the heading */
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    p.lead {
        font-size: 1.25rem;
        color: #333;
    }

    p.lead a {
        color: #0069d9;
        text-decoration: none;
    }

    p.lead a:hover {
        color: #004085;
        text-decoration: underline;
    }
</style>
