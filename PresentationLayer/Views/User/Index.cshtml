@model IEnumerable<UserViewModel> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <h1>Users</h1>

@* <a asp-action="CreateDepartment" class ="btn btn-success">Create New Department</a> *@





@if (Model.Count() > 0)
{
       
        <br />

            <div class="m-2" >
                <form class ="row offset-2" asp-action="index">
                     <div class ="col-8">
                        <input class ="form-control" type ="text"  name ="SearchValue" placeholder ="User's Email"/>
                    </div>


                        <div class ="col-4">
                            <input class ="btn btn-info" type ="submit" value ="Search" />

                    </div>

                </form>
            </div>


                <table class="table table-striped table-hover mt-3" >
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(U => U.Id)</td>
                    <td>@Html.DisplayNameFor(U => U.Fname)</td>
                    <td>@Html.DisplayNameFor(U => U.Lname)</td>

                    <td>@Html.DisplayNameFor(U => U.Email)</td>
                    <td>@Html.DisplayNameFor(U => U.Roles)</td>
                    <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>



            <tbody>
            @foreach (var user in Model)
            {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Fname</td>
                            <td>@user.Lname</td>
                            <td>@user.Email</td>
                            <td>@string.Join(',' , user.Roles)</td>
                            <td>@user.PhoneNumber</td>

                                    <td><a asp-action="Details" asp-route-id = "@user.Id.ToString()"><i class ="fas fa-eye"></i></a></td>
                                    <td><a asp-action="Edit" asp-route-id="@user.Id.ToString()"><i class ="fas fa-edit"></i></a></td>
                                    <td><a asp-action="Delete" asp-route-id="@user.Id.ToString()"><i class ="fas fa-trash"></i></a></td>
                        </tr>
            }

            </tbody>

        </table>
}
else
{
        <div class = "mt-5 alert alert-warning">
            <h3>There is No Users</h3>
        </div>
} 


