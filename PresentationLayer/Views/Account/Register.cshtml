@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class ="text-danger" ></div>

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="Register" method="post">
            @* Username Field *@
            <input class="text" asp-for="Fname" placeholder="First Name" />
            <span asp-validation-for="Fname" class="text-danger"></span>
            <br/>
            <input class="text" asp-for="Lname" placeholder="Last Name" />
            <span asp-validation-for="Lname" class="text-danger"></span>
            <br/>
            @* Email Field *@
            <input class="text email" asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <br/>
            @* Password Field *@
            <input class="text" asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <br/>
            @* Confirm Password Field *@
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <br/>

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox" />
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"></div>
            </div>

            <input type="submit" value="SIGNUP">
        </form>
        <p>Already have an Account? <a asp-action="Login">Login Now!</a></p>
    </div>
</div>

@section _ValidationScriptsSection {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
}
