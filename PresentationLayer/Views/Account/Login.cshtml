@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div asp-validation-summary="All" class ="text-danger" ></div>

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="Login" method="post">
           
        
            @* Email Field *@
            <input class="text email" asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <br/>
            @* Password Field *@
            <input class="text" asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <br/>
      

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox" />
                    <span>Remember Me ? </span>
                </label>
                <div class="clear"></div>
            </div>

            <input type="submit" value="SIGNIN">
        </form>
        <p>Don't' have an Account? <a asp-action="Register">Sign up Now!</a></p>
    </div>
</div>

@section _ValidationScriptsSection {
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
}
