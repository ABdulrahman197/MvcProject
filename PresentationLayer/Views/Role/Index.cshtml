@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "AllRolles";
}





<a asp-action="AddRole" class ="btn btn-success">Add Role</a>





@if (Model.Count() > 0)
{
            <h1>All Rolles</h1>
            <br />







            <div class="m-2" >
                        <form class ="row offset-2" asp-action="Index">
                     <div class ="col-8">
                            <input class ="form-control" type ="text"  name ="SearchValue" placeholder ="Role Name"/>
                    </div>


                        <div class ="col-4">
                            <input class ="btn btn-info" type ="submit" value ="Search" />

                    </div>

                </form>
            </div>






                    <table class="table table-striped table-hover mt-3" >
                <thead>
                    <tr>
                @* <td>@Html.DisplayNameFor(E => E.Image)</td> *@

                        <td>@Html.DisplayNameFor(R => R.Id)</td>
                        <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                            

                            <td>Details</td>
                            <td>Update</td>
                            <td>Delete</td>
                    </tr>
                </thead>



                <tbody>
            @foreach (var role in Model)
            {
                                <tr>
                    @* <td><img src="~/Files/Images/@Employee.Image" class = "rounded" height="40" width= "40" alt ="Employee Image"  /></td>
 *@
                                    
                                            <td>@role.Id</td>
                                            <td>@role.RoleName</td>


                                            <td><a asp-action="Details" asp-route-id = "@role.Id"><i class ="fas fa-eye"></i></a></td>
                                            <td><a asp-action="Edit" asp-route-id="@role.Id"><i class ="fas fa-edit"></i></a></td>
                                            <td><a asp-action="Delete" asp-route-id="@role.Id"><i class ="fas fa-trash"></i></a></td>
                                </tr>
            }

                </tbody>

            </table>
}
else
{
            <div class = "mt-5 alert alert-warning">
                <h3>There is No Rolles</h3>
            </div>
} 



